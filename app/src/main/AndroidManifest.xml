<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.weapp.chatemodule">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".applicationClass.BaseApplication"
        android:icon="@drawable/ic_launcher_background"
        android:label="@string/app_name"
        android:supportsRtl="true"
        tools:ignore="AllowBackup">

        <activity
            android:name=".ui.SplashActivity"
            android:configChanges="orientation|touchscreen|keyboardHidden|keyboard|layoutDirection|screenSize"
            android:theme="@style/dashboard"
            android:label="@string/chat_demo"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.login.LoginActivity"
            android:configChanges="orientation|touchscreen|keyboardHidden|keyboard|layoutDirection|screenSize"
            android:theme="@style/dashboard"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.registration.RegistrationActivity"
            android:configChanges="orientation|touchscreen|keyboardHidden|keyboard|layoutDirection|screenSize"
            android:theme="@style/dashboard"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.main.MainActivity"
            android:configChanges="orientation|touchscreen|keyboardHidden|keyboard|layoutDirection|screenSize"
            android:theme="@style/dashboard"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.chat.ChatActivity"
            android:configChanges="orientation|touchscreen|keyboardHidden|keyboard|layoutDirection|screenSize"
            android:theme="@style/dashboard"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.groupcreate.GroupCreateActivity"
            android:configChanges="orientation|touchscreen|keyboardHidden|keyboard|layoutDirection|screenSize"
            android:theme="@style/dashboard"
            android:screenOrientation="portrait" />

    </application>

</manifest>